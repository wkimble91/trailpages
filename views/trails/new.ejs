<% layout('layouts/boilerplate')%>

<div class="row">
    <h1 class="text-center">New Trails</h1>
    <div class="col-md-6 offset-md-3">
        <form action="/trails" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="trail[title]" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="trail[location]" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Trail Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                        aria-describedby="price-label" name="trail[price]" required>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="trail[description]"
                    required></textarea>
            </div>
            <div class="mb-5">
                <label for="image" class="form-label">Choose image(s)</label>
                <input class="form-control" type="file" id="image" name="image" multiple required>
            </div>
            <div class="mb-3">
                <button class="btn btn-success" type="submit">Add Trail</button>
                <a class="btn btn-danger" href="/trails">Cancel</a>
            </div>
        </form>
    </div>
</div>